<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.paularagones.moode.Activities.moode.com.Activities.MoodActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:text="Date Chart for the month of "
                android:id="@+id/title_date_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView android:text="By Feelings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />

            <TextView android:text="By Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/location_list_view"        />


            <TextView android:text="By Person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/person_list_view"
                />

            <TextView android:text="By Activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/activity_list_view"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
